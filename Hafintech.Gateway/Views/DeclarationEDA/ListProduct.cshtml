<div class="row-fluid" id="eda-list-product">
    <div class="span12">
        @*<input type="hidden" id="idDcl" value="@ViewBag.IdDe" />*@
        <div class="widget-box">

            <div class="row-fluid">
                @if (ViewBag.isView == 0)
                {
                    <a onclick="Export.AddProduct()" class="btn btn-success" style="float:right; margin: 2px 5px;"><i class="icon glyphicon-plus"></i> Thêm hàng</a>
                }
            </div>
            <div class="clearfix"></div>
            <div style="clear:both"></div>
            <div class="widget-title">
                <span class="icon"><i class="icon-align-justify"></i></span>
                <h5>Chi tiết danh sách hàng</h5>
            </div>
            <div style="overflow-x:auto; overflow-y: scroll;">
                <table id="listContainerProduct" class="table table-bordered data-table table-striped with-check" role="grid" aria-describedby="example1_info">
                    <thead>
                        <tr>
                            <th style="min-width:50px">STT</th>
                            <th style="min-width:100px">Mã số hàng hóa</th>
                            <th style="min-width:100px">Mô tả hàng hóa</th>
                            <th style="min-width:100px">Xuất xứ</th>
                            <th style="min-width:100px">Số lượng 1</th>
                            <th style="min-width:100px">Đợn vị tính(1)</th>
                            <th style="min-width:100px">Số lượng 2</th>
                            <th style="min-width:100px">Đợn vị tính(2)</th>
                            <th style="min-width:100px">Trị giá hóa đơn</th>
                            <th style="min-width:100px">Mã đồng tiền trị giá thuế</th>
                            <th style="min-width:100px">Trị giá tính thuế</th>
                            <th style="min-width:100px">Đơn giá hóa đơn</th>
                            <th style="min-width:100px">Mã đồng tiền của đơn giá hóa đơn</th>
                            <th style="min-width:100px">Đơn vị của đơn giá hóa đơn</th>
                            <th style="min-width:100px">Thuế suất</th>
                            <th style="min-width:100px">Số tiền thuế</th>
                            <th style="min-width:100px">Mã miễn/ giảm không chịu thuế xuất khẩu</th>
                            <th style="min-width:100px">Số tiền giảm thuế xuất khẩu</th>
                            <th style="min-width:100px">Số dòng hàng trên tờ khai TNTX</th>

                            <th style="min-width:150px">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr v-for="(item, index) in lstProduct">
                            <td>{{index+1}}</td>
                            <td>
                                <a href="javascript:;" v-on:click="viewDetailProduct(item.productId)">{{item.hSCd}}</a>
                            </td>
                            <td>{{item.itemName}}</td>
                            <td>{{item.placeOriginCd}}</td>
                            <td>{{item.qtt1}}</td>
                            <td>{{item.qttUnitCd1}}</td>
                            <td>{{item.qtt2}}</td>
                            <td>{{item.qttUnitCd2}}</td>
                            <td>{{item.invValue}}</td>
                            <td>{{item.cstValueCurCd}}</td>
                            <td>{{item.cstValue}}</td>
                            <td>{{item.invUnitPrice}}</td>
                            <td>{{item.unitPriceCurCd}}</td>
                            <td>{{item.priceQttUnit}}</td>
                            <td>{{item.dutyRate}}</td>
                            <td>1</td>
                            <td>{{item.rdcExpTaxCd}}</td>
                            <td>{{item.rdcAmtExpTax}}</td>
                            <td>{{item.tenDclLineNo}}</td>
                            <td><a href="javascript:;" v-on:click="viewEditProduct(item.productId)" class="btn btn-warning">Sửa</a>
                                <a href="javascript:;" v-on:click="delProduct(item.productId)" class="btn btn-danger">Xóa</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="row-fluid" style="margin-top: 30px">
                <div class="span3">
                    <label class="control-label span3">Tổng TGKB</label>
                    <div class="controls">
                        <input type="text" class="" />
                    </div>
                </div>

                <div class="span3">
                    <label class="control-label span3">Tổng TGTT</label>
                    <div class="controls">
                        <input type="text" class="" />
                    </div>
                </div>

                <div class="span3">
                    <label class="control-label span3">Tổng tiền thuế</label>
                    <div class="controls">
                        <input type="text" class="" />
                    </div>
                </div>

                <div class="span3">
                    <label class="control-label span3">Tổng lượng</label>
                    <div class="controls">
                        <input type="text" class="" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("html").css("height", "100%");
        $("body").css("height", "100%");
        $("div[id='content']").css("height", "89%");

        var a = $("li[class='treeview act']");
        if (a.length > 1) {
            a[1].removeAttribute("class", "act");
        }

    });
</script>