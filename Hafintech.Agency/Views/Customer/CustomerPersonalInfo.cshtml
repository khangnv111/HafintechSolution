
@{
    ViewBag.Title = "CustomerPersonalInfo";
}

<div style="padding: 0 20px 0 20px; margin: auto">
    <div class="row-fluid">
        <div class="span12">
            <div class="span12" style="border-bottom: 1px solid #808080; margin-bottom: 5px">
                <span>Quản lý khách hàng   >>   Thông tin chi tiết khác hàng cá nhân</span>
            </div>

            <div class="row-fluid">
                <h5 id="fullname"></h5>
            </div>

            <div class="row-fluid" style="margin-bottom: 20px">
                <a href="javascript:;" class="btn btn-warning" style="padding: 8px 20px 8px 20px;"> Thông tin tài khoản</a>
                <a href="@Url.Action("CustomerPersonalDeclaration","Customer", new { personalId = ViewBag.personalId})" class="btn btn-success" style="padding: 8px 20px 8px 20px;"> Danh sách tờ khai</a>
                <a href="javascript:;" class="btn btn-success" style="padding: 8px 20px 8px 20px;"> Lịch sử nộp tiền thuế</a>

                <a href="javascript:;" class="btn btn-danger" style="padding: 8px 20px 8px 20px; float: right"><i class="fa fa-edit"></i> Sửa</a>
            </div>

            <div class="content-page-business-info" style="border: 1px solid #dadada;">
                <div class="form-horizontal" style="padding:10px;">
                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Họ và tên: </label>
                                <div id="fullnamePersonal" class="main_input_box" style="width: 40%; float: left"> 
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Ngày sinh <span class="error">(*)</span></label>
                                <div id="birthDay" class="main_input_box" style="width: 13%; float: left"> 
                                    
                                </div> 
                            </div>
                        </div>

                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Giới tính</label>

                                <div id="gender" style="float: left; width: 20%;"> 
                                </div> 

                            </div>
                        </div>
                    </div> 

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Số CMND</label>
                                <div id="identityCard" class="main_input_box" style="width: 20%; float: left">  
                                </div>
								 
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Nơi cấp </label>
                                <div id="identityPlace" class="main_input_box" style="width: 40%; float: left"> 
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Ảnh CMND</label>
                                <div id="idImgFront" class="main_input_box" style="width: 15%; float: left"> 

                                </div>
                                <div id="idImgBack" class="main_input_box" style="width: 15%; float: left"> 

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Email</label>
                                <div id="email" class="main_input_box" style="width: 40%; float: left">

                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
                            <div class="control-group1">
                                <label style="width: 10%; float: left; display: inline-block">Số ĐT</label>
                                <div id="phone" class="main_input_box" style="width: 40%; float: left"> 
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12">
							<div class="control-group1">
								<label style="width: 10%; float: left; display: inline-block">Địa chỉ</label>
								<div id="detailAdress" style="width: 40%; float: left;">
								</div>
							</div>
                        </div>
                    </div>
 

                </div>
            </div>


        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        Customer.LoadDetailPersonal(@ViewBag.personalId);

    })
</script>