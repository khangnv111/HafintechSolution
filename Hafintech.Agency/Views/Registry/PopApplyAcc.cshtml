
<div id="loginbox" style="width: 700px;">
    <div class="control-group normal_text">
        <b style="font-size:18px; text-transform: uppercase">Thiết lập tài khoản</b>
        <b onclick="utils.closeAll();" class="icClose">X</b>
    </div>

    <form enctype="multipart/form-data" id="form-input" name="form-input">
        <div class="social-auth-links text-center">
            <p id="LogError" style="color:red;display:none;"></p>
        </div>
        <div class="form-horizontal" style="padding:10px;">

            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group1">
                        <div class="span3">
                            <label>Tên tài khoản</label>
                        </div>
                        <div class="span6">
                            <input type="text" class="span12" id="accName" name="accName" placeholder="" />
                        </div>
                        <div class="span2">
                            <a href="javascript:;" onclick="UserAgen.CheckAccTK()"><i class="fa fa-check-square"></i> Kiểm tra</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group1">
                        <div class="span3">
                            <label>Họ và tên </label>
                        </div>
                        <div class="span6">
                            <input type="text" class="span12" id="fullname" name="fullname" placeholder="Họ và tên" />
                        </div>
                    </div>
                </div>
                 
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group1">
                        <div class="span3">
                            <label>Tên công ty</label>
                        </div>
                        <div class="span8">
                            <input type="text" class="span12" id="company" name="company" placeholder="" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group1">
                        <div class="span3">
                            <label>Trạng thái</label>
                        </div>
                        <div class="span8">
                            <select class="span6" id="statusAcc">
                                @*<option> -- Chọn trạng thái --</option>*@
                                <option value="1">Hoạt động</option>
                                <option value="0">Không hoạt động</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid" style="margin-top: 25px; margin-bottom: 15px;">
                <div class="span9" style="float:right">
                    <a href="javascript:;" onclick="Customer.ConfirmInUpBusiness()" class="btn btn-success" style="padding: 7px 35px;">Tạo</a>
                </div>
                
            </div>

        </div>

        
    </form>
</div>