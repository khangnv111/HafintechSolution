
@{
    ViewBag.Title = "WeighInfo"; 
}

<div id="loginbox" style="width: 100%">
	<div>
		<div class="control-group normal_text" style="width: 100%">
			<b style="font-size:18px; text-transform: uppercase">THÔNG TIN CÂN NẶNG CỦA MÃ SOI CHIẾU: {{data.verifyCode}}</b>
			<b v-on:click="ClosePop()" class="icClose">X</b>
		</div>
		<div class="container-fluid">
			<div class="row-fluid" style="padding: 25px 0; text-align: center; border-bottom: 1px solid #c3c1c1">
				<b>PHIẾU KIỂM TRA CÂN NẶNG</b>
			</div>

			<div class="row-fluid" style="margin: 20px 0; border-bottom: 1px dashed #000000">
				<div class="span6">
					<div class="span4">Cán bộ vận hành</div>
					<div class="span7"><b></b></div>
				</div>
				<div class="span6">
					<div class="span4">Ngày giờ cân</div>
					<div class="span7"><b></b></div>
				</div>
			</div>

			<div class="row-fluid">
				<table class="table" role="grid">
					<thead>
						<tr>
							<th style="min-width:70px">Đợt</th>
							<th >Cân nặng (Kg)</th> 
						</tr>
					</thead>
					<tbody class="content-search-table table-bordered"> 

						<tr v-for="(item, index) in WeighInfo">
							<td style="text-align: center">{{index + 1}}</td>
							<td style="text-align: center">
								<input type="text" class="span5" v-model="item.weigh" disabled/>
							</td> 
						</tr>

					</tbody>
				</table>
			</div>
			<div class="row-fluid">
				<div class="row">
					<div class="span6">
						<b>TỔNG CÂN NẶNG</b>
					</div>
					<div class="span6">
						{{totalWeigh}} KG
					</div>
				</div>
				<div class="row">
					<div class="span6">
						<b>ĐƠN GIÁ (VND/Kg)</b>
					</div>
					<div class="span6">
						30,000
					</div>
				</div>
				<div class="row">
					<div class="span6">
						<b>THÀNH TIỀN</b>
					</div>
					<div class="span6">
						{{monneyTotal}}  VND
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

