            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>*@
    </ul>
</div>

<script>
    $('.dDate').datepicker({
        //dateFormat: 'dd/mm/yyyy'
    });
    $(document).ready(function () {
        var h1 = $(".dDate").offset().top + 30;
        //var h2 = $(".datepicker").offset().top;
        //var top = h1 - h2 - $(".datepicker").height();

        $(".datepicker").css("margin-top", h1 + "px");

        setTimeout(function () {
            UserAgen.GetListUser();
        }, 1000);
    });

</script>



