

<div id="loginbox" style="width: 800px;">
    <div class="control-group normal_text">
        <b style="font-size:18px; text-transform: uppercase">cấu hình phân quyền</b>
        <b onclick="utils.closeAll();" class="icClose">X</b>
    </div>

    <form enctype="multipart/form-data" id="form-input" name="form-input">
        <div class="social-auth-links text-center">
            <p id="LogError" style="color:red;display:none;"></p>
        </div>

        <div class="form-horizontal" style="padding:10px;">

            <div class="row-fluid">
                <div class="span12">
                    <div class="control-group1">
                        <div class="span3">
                            <label>Nhóm phân quyền</label>
                        </div>
                        <div class="span8">
                            <select class="span4">
                                <option>-- Chọn quyền --</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row-fluid" style="margin-top: 25px; margin-bottom: 15px;max-height: 300px; overflow-y: auto">

                <div class="span12">
                    <table class="table table-bordered data-table table-striped with-check" role="grid">
                        <thead>
                            <tr>
                                <td style="text-align: center">STT</td>
                                <td style="text-align: center">Quản lý chức năng</td>
                                <td style="text-align: center">Xem </td>
                                <td style="text-align: center">Sửa</td>
                                <td style="text-align: center">Xóa</td>
                                <td style="text-align: center">Tất cả</td>
                            </tr>
                        </thead>
                        <tbody id="" style="">
                            @for (int i = 0; i < 15; i++)
                            {
                                <tr>
                                    <td style="text-align: center">@(i + 1)</td>
                                    <td></td>
                                    <td style="text-align: center"><input type="checkbox" /></td>
                                    <td style="text-align: center"><input type="checkbox" /></td>
                                    <td style="text-align: center"><input type="checkbox" /></td>
                                    <td style="text-align: center"><input type="checkbox" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                 
            </div>

            <div class="row-fluid" style="margin: 0 0 15px 0; text-align: right">
                <div class="span12">
                    <button class="btn btn-success span3">Lưu lại</button>
                    <button onclick="utils.closeAll();" class="btn span2">Hủy</button>
                </div>
            </div>
        </div>


    </form>
</div>